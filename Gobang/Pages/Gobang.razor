@page "/"
@page "/{RoomName}"

@inject IJSRuntime JS

<div class="gobang-box">
    <Gobang.Shared.Chessboard Chess="Chess" OnPlaying="Playing"></Gobang.Shared.Chessboard>
</div>
<div class="chess-info">
    <h1>五子棋⚫⚪</h1>
    <p><b>⚡是时候表演真正的技术了⚡</b></p>
    <p><label><input type="radio" name="chess" checked="checked" @onclick="@(() => first = "He")"> 对手先手</label></p>
    <p><label><input type="radio" name="chess" @onclick="@(() => first = "me")"> 我先手</label></p>
    @if (!IsInRoom)
    {
        <p><button class="box-btn" @onclick="CreateRoom">创建房间</button></p>
        <p><button class="box-btn" @onclick="GetIntoRoom">加入房间</button></p>
    }
    else
    {
        <p><button class="box-btn" @onclick="StartGame">@(IsInGame ? "认输" : "开始游戏")</button></p>
        if (IsReady)
        {
            <p><button class="box-btn" @onclick="StartGame">@(IsInGame ? "认输" : "开始游戏")</button></p>
        }
        else
        {
            <p><button class="box-btn" @onclick="Invite">邀请朋友</button></p>
        }
    }

    <div class="chess-msg">
        <p><b>@msgs</b></p>
        <span>（1）由房主选择谁执黑先行!⚫</span>
    </div>
</div>